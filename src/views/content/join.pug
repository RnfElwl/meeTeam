extends base

block content 
    form.login__form(action="post") 
                div.login__inputs
                    input.login__input(type="text" name="name" placeholder="name" required)
                    input.login__input(type="text" name="email" placeholder="email" required)
                    input.login__input(type="text" name="id" placeholder="id" required)
                    input.login__input(type="password" name="password" placeholder="password" required)
                    input.login__input(type="password" name="password_check" placeholder="password check" required)
                input.login__submit(type="submit" value="로그인")